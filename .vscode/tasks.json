{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc etkin dosyayı derle",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.c",
                "-L../mlx",
                "-lmlx",
                "-L../Libft/Libft",
                "-lft",
                "-framework",
                "OpenGL",
                "-framework",
                "AppKit",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Hata Ayıklayıcısı tarafından oluşturulan görev."
        }
    ],
    "version": "2.0.0"
}
